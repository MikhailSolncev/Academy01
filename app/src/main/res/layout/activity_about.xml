<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <ImageView
        android:id="@+id/image_view_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img"
        app:layout_constraintCircleRadius="100dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_view_photo"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_size_title"
        android:id="@+id/text_view_about_name"
        android:text="firstname"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_view_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_about_name"
        android:id="@+id/text_view_about_lastname"
        android:textSize="@dimen/text_size_title"
        android:text="lastname"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_about_lastname"
        app:layout_constraintStart_toEndOf="@id/image_view_photo"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/text_view_career"
        android:textSize="@dimen/text_size_middle"
        android:text="career"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_view_photo"
        app:layout_constraintTop_toBottomOf="@id/text_view_career"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/text_view_company"
        android:textSize="@dimen/text_size_middle"
        android:text="company"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_telegramm"
        app:layout_constraintStart_toEndOf="@id/image_view_photo"
        app:layout_constraintTop_toBottomOf="@id/text_view_company"
        android:id="@+id/image_view_telegramm"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_twitter"
        app:layout_constraintStart_toEndOf="@id/image_view_telegramm"
        app:layout_constraintTop_toBottomOf="@id/text_view_company"
        android:id="@+id/image_view_twitter"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/text_view_description"
        android:text="desription"
        />


</android.support.constraint.ConstraintLayout>